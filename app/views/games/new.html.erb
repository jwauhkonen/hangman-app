<h1>There will be a game here!</h1>

<div id="game-area">
	<div id="current-word"></div>
	<div id="guessed-letters"></div>
	<div id="wrong-guesses"></div>
	<div id="player-input">
		<input id="player-guess" type="text"></input>
		<button id="guess-button">Guess Letter!</button>
	</div>
</div>

<p><%= @game.id %> is the game id</p>
<p><%= @game.game_word %> is the word</p>
<p><%= @game.current_word %> is what you have so far</p>
<p><%= @game.guessed_letters %> is the letters you have guessed</p>
<p><%= @game.wrong_guesses %> is how many wrong guesses you've made</p>

<%= button_to "Logout", session_url, method: :delete %>
<%= link_to "this game", game_path(@game) %>



<script src="lib/jquery-2.1.1.js"></script>
<script src="app/assets/javascripts/gameView.js"></script>
<script>
	var $el = $("#game-area");
	var gameId = <%= @game.id %>
	var View = new Hangman.GameView($el, gameId);
</script>
	