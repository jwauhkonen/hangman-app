<%= button_to "Quit Game", session_url, method: :delete %>

<div id="game-area">
	<div id="game-info">
		
		<div id="guessed-letters"></div>
		<div id="wrong-guesses"></div>
		<div id="player-input">
			<input id="player-guess" type="text"></input>
			<button id="guess-button">Guess!</button>
		</div>
		<div id="current-word"></div>
	</div>
	
	<div id="hangman-graphic">
		<img src="/assets/hangman.jpg">
		<div class="hangman-cover" data-id="0"></div>
		<div class="hangman-cover" data-id="1"></div>
		<div class="hangman-cover" data-id="2"></div>
		<div class="hangman-cover" data-id="3"></div>
		<div class="hangman-cover" data-id="4"></div>
		<div class="hangman-cover" data-id="5"></div>
		<div class="hangman-cover" data-id="6"></div>
		<div class="hangman-cover" data-id="7"></div>
		<div class="hangman-cover" data-id="8"></div>
		<div class="hangman-cover" data-id="9"></div>
		<div class="hangman-cover" data-id="10"></div>
		<div class="hangman-cover" data-id="11"></div>
	</div>
</div>

<script src="lib/jquery-2.1.1.js"></script>
<script src="app/assets/javascripts/gameView.js"></script>
<script>
	var imageObj = new Image();
	var $el = $("#game-area");
	var gameId = <%= @game.id %>;
	new Hangman.GameView($el, gameId);
</script>
	